<% papers.each do |paper| %>
<div class="row">
  <div class="col-lg-9">
  <span class="badge-accepted">Accepted</span> <span class="time">4 days ago</span>
    <h2 class="paper-title"><%= link_to paper.title, paper_path(paper) %><!-- <span class="badge-lang">Python</span>--></h2>
    <%= formatted_body(paper, 200) %>
  </div>
  <div class="col-lg-3 paper-meta">
    <div class="submitted_by">
    <!-- to do // add link to submitter -->
      <%# link_to '#' do %>
      <%# image_tag 'http://i.pravatar.cc/48', size: "24x24" %>
      <%# username %>
      <%# end %>
    </div>
    <div class="doi">
        <%= image_tag 'doi.svg'%>
        <% if paper.pretty_doi == "DOI pending" %>
          Pending
        <% else %>
          <%= link_to paper.doi, paper.doi, :target => "_blank", :class => "doi" %>
        <% end %>
    </div>
  </div>
</div>
<% end %>
