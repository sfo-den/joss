<div class="container">
  <div class="row">
    <div class="hero-small">
    <div class="hero-title">
      <%= image_tag "icon_papers.svg", :height => "32px" %><h1>Joss Papers</h1>
      </div>
      <div class="dropdown">
  <button class="btn btn-rss dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    RSS
  </button>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
  <!-- links to rss feeds here -->
    <a class="dropdown-item" href="#"><%= image_tag "rss-sm.svg", :width => "16px" %> Accepted Papers</a>
    <a class="dropdown-item" href="#"><%= image_tag "rss-sm.svg", :width => "16px" %> Active Papers</a>
  </div>
</div>
    </div>
    </div>
  </div>
  </div>
  <div class="container">
  <div class="row">
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to "All papers (#{Paper.everything.count})", papers_path, :class => "tabnav-tab #{selected_class('index')}" %>
      <%= link_to "Active papers (#{Paper.in_progress.count})", active_papers_path, :class => "tabnav-tab #{selected_class('active')}" %>
      <%= link_to "Accepted papers (#{Paper.visible.count})", accepted_papers_path, :class => "tabnav-tab #{selected_class('popular')}" %>
    </div>
  </div>
  <div id ="primary-content" class="paper-list">
    <%= render :partial => "list", :locals => { :papers => @papers } %>    
  </div>
  <div class="row">
    <!-- :class not applying here? --> <div class="pagination_helper"><%= page_entries_info @papers %></div> 
    <%= will_paginate @papers,inner_window: 3, outer_window: 0,page_links: false%> 
  </div>
</div>