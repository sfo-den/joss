<div class="media editor">
  <%- unless editor.retired? %>
  <img src="<%= editor.avatar_url %>" class="editor-avatar" alt="<%= editor.full_name %>">
  <%- end %>
  <div class="media-body">
    <h5 class="mt-0">
      <% if !editor.login.blank? %>
      <%= link_to "#{editor.full_name} (@#{editor.login})", editor.url %>
      <% else %>
      <%= link_to "#{editor.full_name}", editor.url %>
      <% end %>
    </h5>
    <%- unless editor.retired? %>
    <div class="small">
      <%- if editor.board? %>
        <%= editor.title %>
      <%- else %>
        Editor <%- if editor.categories.present? %>: <%= editor.category_list %><%- end %>
      <%- end %>
    </div>
    <p><%= editor.description.html_safe %></p>
    <%- end %>
  </div>
</div>
