<div class="container">
  <div class="hero row">
    <div class="hero-content col-md-7">
      <h1><%= Rails.application.settings['name'] %> is <%= setting(:tagline).html_safe %></h1>
      <p class="lead">Committed to publishing quality research software with zero article processing charges or subscription fees.</p>
    </div>

    <div class="hero-nav col-md-4 offset-md-1 align-self-end">
      <%= link_to papers_path do %>
        <%= image_tag 'icon_papers.svg' %>
        Explore Papers
      <% end %>
      <%= link_to "https://joss.readthedocs.io/en/latest/" do %>
        <%= image_tag 'icon_docs.svg' %>
        Documentation
      <% end %>
      <%= link_to about_path do %>
        <%= image_tag 'icon_info.svg' %>
        Learn More
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h4>Published Papers <span class="badge-count"><%= Paper.visible.count %></span></h4>

  <div class="paper-list" id="all-papers">
    <%= render :partial => "papers/list", :locals => { :papers => @papers } %>
  </div>

  <div class="my-5 text-center">
  <%= link_to "View all papers".html_safe, accepted_papers_path, :class => "btn", :data=> {:text=>"View all papers"} %>
  </div>
</div>
